<!-- Displaying the letters -->
<%= @letters.join(' ') %>

<!-- Form to submit a word -->
<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" class="form-control" placeholder="Your word here">
  <button type="submit" class="btn btn-primary">Play</button>
</form>
